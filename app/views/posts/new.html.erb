<div class="posts-row">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with(model: @post, local: true) do |form| %>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%#= image_tag @post.image.variant(resize: "100, 100"), class: "post-image" if @post.image.attached? %> <%#画像の表示編集機能に書く%>
        <%#= form.file_field :image, multiple: true, id:"post-image" %> <%#multiple: trueをつけていたため保存されなかった%>
        <%= form.file_field :image, id:"post-image" %> <%#画像の投稿フォーム%>
      </div>
      <p>何に関しての会議を行ったか</p>
        <%= form.text_field :title, placeholder: "Title" %>
      <p>会議に関しての感想など</p>
      <%= form.text_area :text, placeholder: "Text", :size=>"100"%>
      <%#= form.collection_select(保存されるカラム名, オブジェクトの配列, カラムに保存される項目, 選択肢に表示されるカラム名, オプション, htmlオプション) %>
      <p>会議の内容</p>
        <%= form.collection_select(:content_id, Content.all, :id, :name, {}, {class:"select-box", id:"content-fee-status"})%>
      <p>会議にかかった時間</p>
        <%= form.collection_select(:meeting_time_id, MeetingTime.all, :id, :name, {}, {class:"select-box", id:"time-fee-status"})%>
      <p>会議の進め方</p>
        <%= form.collection_select(:progress_id, Progress.all, :id, :name, {}, {class:"select-box", id:"progress-fee-status"})%>
      <p>会議での情報量</p>
        <%= form.collection_select(:information_id, Information.all, :id, :name, {}, {class:"select-box", id:"information-fee-status"})%>
      <p>会議での参加人数</p>
        <%= form.collection_select(:people_id, Person.all, :id, :name, {}, {class:"select-box", id:"people-fee-status"})%>
      <%#= form.collection_select(保存されるカラム名, オブジェクトの配列, カラムに保存される項目, 選択肢に表示されるカラム名, オプション, htmlオプション) %>
      <p><%= form.submit "投稿する", class:"form_button" %></p>
    <% end %>
  </div>
</div>